{
  "name": "@demony/mobile",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    
    "cap:init": "cap init Demony com.demony.app --web-dir dist",
    "cap:sync": "cap sync",
    
    "android:add": "cap add android",
    "android:open": "cap open android",
    "android:sync": "cap sync android",
    "android:build": "npm run build && cap sync android",
    "android:build:debug": "npm run android:build && cd android && gradlew assembleDebug",
    "android:build:release": "npm run android:build && cd android && gradlew bundleRelease",
    "android:keystore": "keytool -genkey -v -keystore android/app/demony-release-key.keystore -alias demony -keyalg RSA -keysize 2048 -validity 10000",
    
    "ios:add": "cap add ios",
    "ios:open": "cap open ios",
    "ios:sync": "cap sync ios",
    "ios:build": "npm run build && cap sync ios"
  },
  "dependencies": {
    "@capacitor/core": "^5.6.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6",
    "@capacitor/splash-screen": "^5.0.6"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.6.0",
    "@capacitor/android": "^5.6.0",
    "@capacitor/ios": "^5.6.0",
    "vite": "^5.0.0"
  }
}
